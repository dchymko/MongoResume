@using MongoResume.Models;
@model Resume

@{
    ViewBag.Title = "Resume";
    Layout = "~/Views/Shared/_ResumeLayout.cshtml";
    
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>

	<title>Daryl Chymko | Web Developer | dchymko@infometrix.ca</title>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />

	<meta name="keywords" content="" />
	<meta name="description" content="" />
	<link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css" media="all" /> 
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/resume.css")" media="all" />

</head>
<body>

<div id="doc2" class="yui-t7">
	<div id="inner">
	
		<div id="hd">
			<div class="yui-gc">
				<div class="yui-u first">
					<h1>@Model.firstName @Model.lastName</h1>
					<h2>@Model.jobTitle</h2>
				</div>

				<div class="yui-u">
					<div class="contact-info">
						<h3><a id="pdf" href="@Url.Content("~/Content/resume.pdf")">Download PDF</a></h3>
						<h3><a href="mailto:@Model.email">@Model.email</a></h3>
						<h3>@Model.phone</h3>
					</div><!--// .contact-info -->
				</div>
			</div><!--// .yui-gc -->
		</div><!--// hd -->

		<div id="bd">
			<div id="yui-main">
				<div class="yui-b">

					<div class="yui-gf">
						<div class="yui-u first">
							<h2>Profile</h2>
						</div>
						<div class="yui-u">
							<p class="enlarge">
								@Model.profile
							</p>
						</div>
					</div><!--// .yui-gf -->

					<div class="yui-gf">
						<div class="yui-u first">
							<h2>Skills</h2>
						</div>
						<div class="yui-u">
                                @foreach (var group in Model.skillGroups)
                                {
                                    
								<div class="talent">
									<h2>@group.groupName</h2>
									<p>
                                    @foreach(var item in group.skillList.Select((x, i) => new { Data = x, Index = i } ))   {
                                 
                                        @item.Data
                                        if (item.Index < group.skillList.Length-1)
                                        {
                                             @Html.Raw(", ")
                                        }
                                    }
                                    </p>
								</div>
                                }
								</div>
					</div><!--// .yui-gf -->
                    <!--
					<div class="yui-gf">
						<div class="yui-u first">
							<h2>Technical</h2>
						</div>
						<div class="yui-u">
							<ul class="talent">
								<li>ASP.NET</li>
								<li>C#</li>
								<li class="last">PHP</li>
							</ul>

							<ul class="talent">
								<li>HTML5</li>
								<li>APIs</li>
								<li class="last">Git / Subversion</li>
							</ul>

							<ul class="talent">
								<li>Windows/Linux deployments</li>
								<li>MSSQL/MySQL</li>
								<li class="last">Java</li>
							</ul>
						</div>
					</div>
                    //-->
                    <!--// .yui-gf-->
                    
					<div class="yui-gf">
	
						<div class="yui-u first">
							<h2>Experience</h2>
						</div><!--// .yui-u -->

						<div class="yui-u">
                        @foreach (var job in Model.workExp)
                        {
							<div class="job">
								<h2>@job.company</h2>
								<h3>@job.jobTitle</h3>
								<h4>@job.startDate.AsDateTime().ToString("yyyy") - @job.endDate.AsDateTime().ToString("yyyy") </h4>
                                <p><ul>
                                @foreach (var task in job.tasks) {
								<li>@task</li>
                                }
                                </ul></p>
							</div>
                        }



						</div><!--// .yui-u -->
					</div><!--// .yui-gf -->





				</div><!--// .yui-b -->
			</div><!--// yui-main -->
		</div><!--// bd -->

		<div id="ft">
			<p>Daryl Chymko &mdash; <a href="mailto:dchymko@infometrix.ca">dchymko@infometrix.ca</a> &mdash; (250) - 859-0222</p>
  
            <br /><br />
            <p> Prefer @Html.ActionLink("JSON", "JSON","Resume" )?</p>
		</div><!--// footer -->

	</div><!-- // inner -->


</div><!--// doc -->


</body>
</html>

